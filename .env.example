# EarningLens Environment Variables
# Copy this file to .env and fill in your actual credentials

# ============================================================================
# WEB APPLICATION (Next.js)
# ============================================================================

# Database
DATABASE_URL="postgresql://user:password@host:5432/database"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Better Auth - Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# Better Auth - GitHub OAuth (optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Better Auth - Session Secret
BETTER_AUTH_SECRET="generate-a-random-secret-here"

# Stripe (for subscriptions)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Cloudflare R2
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-bucket-name"
R2_PUBLIC_URL="https://pub-your-hash.r2.dev"

# YouTube API
YOUTUBE_API_KEY="your-youtube-api-key"
YOUTUBE_CLIENT_ID="your-youtube-client-id"
YOUTUBE_CLIENT_SECRET="your-youtube-client-secret"
YOUTUBE_REFRESH_TOKEN="your-refresh-token"
YOUTUBE_REDIRECT_URI="http://localhost:3000/oauth2callback"

# Rapid API (for YouTube downloads)
RAPID_API_KEY="your-rapid-api-key"

# Email (Resend)
RESEND_API_KEY="re_..."

# Analytics (optional)
NEXT_PUBLIC_GA_ID=""

# Exa.ai (for seed data)
EXA_API_KEY="your-exa-api-key"

